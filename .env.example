# SMS OTP Burner - Environment Variables
# Copy this file to .env and fill in your values

# =============================================================================
# REQUIRED: Telstra API Credentials
# =============================================================================
# Get these from https://dev.telstra.com/
TELSTRA_CLIENT_ID=your_client_id_here
TELSTRA_CLIENT_SECRET=your_client_secret_here

# =============================================================================
# OPTIONAL: Configuration
# =============================================================================

# Maximum number of virtual numbers to lease (default: 1)
# Free Telstra dev accounts are limited to 1 number
MAX_LEASED_NUMBER_COUNT=1

# Allowed CORS origins (comma-separated)
# Default: http://localhost:3000,https://sms.han.life
ALLOWED_ORIGINS=http://localhost:3000,https://sms.han.life

# Enable debug logging (default: false)
# Set to 'true' to enable verbose logging (not recommended in production)
DEBUG=false
